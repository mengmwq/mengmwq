$(function(){
	var ucMain = $(".ucMain");
	var ucLoginBox = $(".ucLoginBox");
	var ucPromptBox = $(".ucPromptBox");
	var headerH = $(".ucHeader").outerHeight();
	var footerH = $(".ucFooter").outerHeight();
	function getHeight(){
		ucMain.css("min-height", $("body").height() - headerH - footerH);
		ucLoginBox.css("top", (ucMain.outerHeight() - ucLoginBox.outerHeight()) / 2 - 20);
		ucPromptBox.css({"top" : ($("body").height() - ucPromptBox.outerHeight()) / 2,
						 "left" : ($("body").width() - ucPromptBox.outerWidth()) / 2});
	}
	
	getHeight();
	$(window).resize(function(){
		getHeight();
	});
});