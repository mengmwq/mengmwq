$(document).ready(function(){
	attentionLoad();
	//点击事件
	$("#attentionButton").on("click",function(){
		console.log("成功");
		$.ajax({
			type:"POST",
			url:insertUserAttentionUrl,
			async:false,
			error:function(request){
//				alert("错误");
			},
			success:function(data){
				if(data=="a"){
					showLogin();	
				}else if(data=="b"){
					document.getElementById("bg").style.display ="block";
					document.getElementById("updateAttentionMessage").style.display ="block";
				}else if(data=="c"){
					alert("最多可关注10户企业");
				}else if(data=="d"){
					$("#attentionButton").text("取消关注");
					var bObj=document.getElementById("attentionButton");
					bObj.style.cssText = "background:url(../../images/share/a5.png) no-repeat 6px -16px;";
					var cobj=document.getElementById("changecolor");
					cobj.style.cssText = "color: #fff; background: #ed9d00;";
				}else if(data=="e"){
					$("#attentionButton").text("关注");
					var bObj=document.getElementById("attentionButton");
					bObj.style.cssText = "background:url(../../images/share/a4.png) no-repeat 6px -16px;";
					var cobj=document.getElementById("changecolor");
					cobj.style.cssText = "color:#333;background: #fff;";
				}else{
//					alert("错误");
				}
			}
		})
	})
});


//载入事件
function attentionLoad(){
	$.ajax({
		type:"POST",
		url:getAttentionEffectiveUrl,
		async:false,
		error:function(request){
//			alert("错误");
		},
		success:function(data){
			console.log(data);
			if(data=="b"){
				$("#attentionButton").text("取消关注");
				var bObj=document.getElementById("attentionButton");
				bObj.style.cssText = "background:url(../../images/share/a5.png) no-repeat 6px -16px;";
				var cobj=document.getElementById("changecolor");
				cobj.style.cssText = "color: #fff; background: #ed9d00;";
			}
			}
		})
}


